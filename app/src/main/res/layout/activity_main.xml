<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/memeImage"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="250dp"
        app:srcCompat="@drawable/meme"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/memeName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/memeImage"
        app:layout_constraintStart_toStartOf="@id/memeImage"
        app:layout_constraintEnd_toEndOf="@id/memeImage"
        android:layout_marginTop="20dp"
        android:text="Me leaving work"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/memeId"
        android:layout_width="200dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/memeName"
        app:layout_constraintStart_toStartOf="@id/memeName"
        app:layout_constraintEnd_toEndOf="@id/memeName"
        android:layout_marginTop="8dp"
        android:text="id"
        android:textSize="15sp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/getMemeButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Next meme"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/memeId"
        app:layout_constraintStart_toStartOf="@id/memeId"
        app:layout_constraintEnd_toEndOf="@id/memeId"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>